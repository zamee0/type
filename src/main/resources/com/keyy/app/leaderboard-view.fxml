<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox spacing="0"
      xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.keyy.app.LeaderboardController">

    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="16" style="-fx-padding: 16 24 16 24; -fx-border-color: transparent transparent #cccccc transparent; -fx-border-width: 0 0 1 0;">
        <Button fx:id="backBtn" text="&lt; Back" style="-fx-background-color:#eb3434"/>
        <Label text="Leaderboard - Top 10 Players" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
    </HBox>

    <!-- Body -->
    <VBox spacing="12" VBox.vgrow="ALWAYS">
        <padding><Insets top="20" right="30" bottom="20" left="30"/></padding>

        <Label fx:id="emptyLabel" text="No scores yet. Be the first to play!"/>

        <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
            <VBox fx:id="leaderboardList" spacing="4">
                <padding><Insets top="4" right="4" bottom="4" left="4"/></padding>
            </VBox>
        </ScrollPane>
    </VBox>

</VBox>
