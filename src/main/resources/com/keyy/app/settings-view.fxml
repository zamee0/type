<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.keyy.app.SettingsController">

    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="16" style="-fx-padding: 16 24 16 24; -fx-border-color: transparent transparent #cccccc transparent; -fx-border-width: 0 0 1 0;">
        <Button fx:id="backBtn" text="&lt; Back" />
        <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Settings" />
    </HBox>

    <!-- Body -->
    <VBox alignment="CENTER" spacing="20" VBox.vgrow="ALWAYS">
        <padding><Insets bottom="40" left="60" right="60" top="40" /></padding>
        <Label style="-fx-font-size: 16px;" />
    </VBox>

</VBox>
