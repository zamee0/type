<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>


<VBox alignment="CENTER" prefHeight="380" prefWidth="490" spacing="30" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.keyy.app.dashboardcontrol">

    <padding>
        <Insets bottom="40" left="40" right="40" top="40" />
    </padding>

    <!-- Welcome Message -->
    <Label fx:id="welcomeLabel" text="Welcome, User!">
        <style>
            -fx-font-size: 28px;
            -fx-font-weight: bold;
            -fx-text-fill: black ;
        </style>
      <font>
         <Font size="18.0" />
      </font>
    </Label>

    <!-- Buttons Container -->
    <VBox alignment="CENTER" maxWidth="350" spacing="15">

        <!-- Start Test Button -->
        <Button fx:id="startTestBtn" maxWidth="Infinity" prefHeight="56.0" prefWidth="350.0" text="Start Typing Test">
            <style>
                -fx-font-size: 16px;
                -fx-padding: 15px;
                -fx-background-color: #4CAF50;
                -fx-text-fill: white;
            </style>
        </Button>

        <!-- View Progress Button (Optional) -->
        <Button fx:id="progressBtn" maxWidth="Infinity" text="View Progress">
            <style>
                -fx-font-size: 16px;
                -fx-padding: 15px;
                -fx-background-color: #2196F3;
                -fx-text-fill: white;
            </style>
        </Button>


        <!-- Logout Button -->
        <Button fx:id="logoutBtn" maxWidth="Infinity" text="Logout">
            <style>
                -fx-font-size: 16px;
                -fx-padding: 15px;
                -fx-background-color: #f44336;
                -fx-text-fill: white;
            </style>
        </Button>

    </VBox>

</VBox>
