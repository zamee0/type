<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox spacing="0"
      xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.keyy.app.ProfileController"
      style="-fx-background-color: #f4f4f4;">

    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="16"
          style="-fx-padding: 16 24 16 24;
                 -fx-background-color: white;
                 -fx-border-color: transparent transparent #e0e0e0 transparent;
                 -fx-border-width: 0 0 1 0;">
        <Button fx:id="backBtn" text="&lt; Back"/>
        <Label text="My Profile" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
    </HBox>

    <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS"
                style="-fx-background-color: transparent; -fx-background: transparent;">
        <VBox spacing="24">
            <padding><Insets top="30" right="40" bottom="30" left="40"/></padding>

            <!-- Avatar + username -->
            <HBox alignment="CENTER_LEFT" spacing="16">
                <Label text="ðŸ‘¤"
                       style="-fx-font-size: 48px;
                              -fx-background-color: white;
                              -fx-background-radius: 50;
                              -fx-border-color: #e0e0e0;
                              -fx-border-radius: 50;
                              -fx-border-width: 1;
                              -fx-padding: 10;"/>
                <VBox spacing="4">
                    <Label fx:id="usernameLabel" text="Username"
                           style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
                    <Label text="Typing History" style="-fx-font-size: 13px; -fx-text-fill: #888888;"/>
                </VBox>
            </HBox>

            <!-- Stats Summary Row -->
            <HBox spacing="16">

                <VBox alignment="CENTER" spacing="6" HBox.hgrow="ALWAYS"
                      style="-fx-background-color: white;
                             -fx-border-color: #e8e8e8;
                             -fx-border-width: 1;
                             -fx-border-radius: 12;
                             -fx-background-radius: 12;
                             -fx-padding: 20;">
                    <Label fx:id="totalGamesLabel" text="0"
                           style="-fx-font-size: 28px; -fx-font-weight: bold;"/>
                    <Label text="GAMES PLAYED"
                           style="-fx-font-size: 11px; -fx-text-fill: #999999; -fx-font-weight: bold;"/>
                </VBox>

                <VBox alignment="CENTER" spacing="6" HBox.hgrow="ALWAYS"
                      style="-fx-background-color: white;
                             -fx-border-color: #e8e8e8;
                             -fx-border-width: 1;
                             -fx-border-radius: 12;
                             -fx-background-radius: 12;
                             -fx-padding: 20;">
                    <Label fx:id="bestWpmLabel" text="â€”"
                           style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2D6BE4;"/>
                    <Label text="BEST WPM"
                           style="-fx-font-size: 11px; -fx-text-fill: #999999; -fx-font-weight: bold;"/>
                </VBox>

                <VBox alignment="CENTER" spacing="6" HBox.hgrow="ALWAYS"
                      style="-fx-background-color: white;
                             -fx-border-color: #e8e8e8;
                             -fx-border-width: 1;
                             -fx-border-radius: 12;
                             -fx-background-radius: 12;
                             -fx-padding: 20;">
                    <Label fx:id="avgAccLabel" text="â€”"
                           style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2E7D52;"/>
                    <Label text="AVG ACCURACY"
                           style="-fx-font-size: 11px; -fx-text-fill: #999999; -fx-font-weight: bold;"/>
                </VBox>

            </HBox>

            <!-- History section title -->
            <Label text="RECENT GAMES"
                   style="-fx-font-size: 12px; -fx-font-weight: bold; -fx-text-fill: #999999;"/>

            <!-- Empty state -->
            <Label fx:id="emptyLabel"
                   text="No records yet. Complete a typing test to see your history here."
                   style="-fx-font-size: 14px; -fx-text-fill: #aaaaaa; -fx-padding: 20 0 20 0;"/>

            <!-- History cards injected by controller -->
            <VBox fx:id="historyList" spacing="10"/>

        </VBox>
    </ScrollPane>

</VBox>
