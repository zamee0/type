<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox fx:id="rootVBox" alignment="CENTER" spacing="0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.keyy.app.TypingController">

    <!-- Typing Pane -->
    <VBox fx:id="typingPane" alignment="CENTER" spacing="24" VBox.vgrow="ALWAYS">
        <padding><Insets bottom="60" left="80" right="80" top="60" /></padding>

        <Label style="-fx-font-size: 28px; -fx-font-weight: bold;" text="KEYY" />

        <HBox alignment="CENTER" spacing="8">
            <Label style="-fx-font-size: 16px;" text="Timer:" />
            <Label fx:id="timerLabel" style="-fx-font-size: 32px; -fx-font-weight: bold;" text="0" />
            <Label style="-fx-font-size: 16px;" text="s" />
        </HBox>

        <Label style="-fx-font-size: 14px;" text="Type the text below:" />

        <VBox style="-fx-border-color: #cccccc; -fx-border-width: 1; -fx-border-radius: 8; -fx-background-color: white; -fx-background-radius: 8;">
            <padding><Insets bottom="20" left="20" right="20" top="20" /></padding>
            <TextFlow fx:id="textFlow" />
        </VBox>

        <Label style="-fx-font-size: 12px;" />
    </VBox>

    <!-- Result Pane (hidden initially) -->
    <VBox fx:id="resultPane" alignment="CENTER" spacing="24" VBox.vgrow="ALWAYS">
        <padding><Insets bottom="60" left="80" right="80" top="60" /></padding>

        <Label style="-fx-font-size: 28px; -fx-font-weight: bold;" text="Test Complete!" />

        <VBox alignment="CENTER" spacing="10">
            <Label fx:id="wpmResultLabel" style="-fx-font-size: 36px; -fx-font-weight: bold;" text="0 WPM" />
            <Label fx:id="accResultLabel" style="-fx-font-size: 22px;" text="0% Accuracy" />
            <Label fx:id="timeResultLabel" style="-fx-font-size: 18px;" text="Time: 0s" />
        </VBox>

        <HBox alignment="CENTER" spacing="16">
            <Button fx:id="retryBtn" text="Retry" />
            <Button fx:id="dashboardBtn" text="Dashboard" />
            <Button fx:id="closeBtn" text="Close" />
        </HBox>
    </VBox>

</VBox>
